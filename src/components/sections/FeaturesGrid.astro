---
import { siteData } from '../../data/siteContent';
import ServiceCard from '../ui/ServiceCard.jsx';
---

<section id="features" class="bg-black py-24 text-white border-t border-white/10">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center mb-16">
      <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl font-display uppercase tracking-widest">Why Choose Us</h2>
      <p class="mt-4 text-lg leading-8 text-gray-400 font-sans">
        Combining craftsmanship, technology, and passion in every detail.
      </p>
    </div>
    
    <div class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-6 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
      {siteData.features.map((feature) => (
        <ServiceCard 
          client:visible
          title={feature.title} 
          description={feature.description} 
          Icon={feature.icon} 
        />
      ))}
    </div>
  </div>
</section>
