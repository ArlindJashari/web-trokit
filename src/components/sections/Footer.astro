---
import { siteData } from "../../data/siteContent";
import {
  InstagramLogo,
  FacebookLogo,
  PaperPlaneTilt,
} from "@phosphor-icons/react";
---

<footer class="bg-black text-white pt-24 md:pt-32 pb-8 md:pb-12" id="contact">
  <div class="max-w-[1440px] mx-auto px-6">
    {/* Parallel Header & Map Section */}
    <div
      class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-24 mb-16 md:mb-24 items-start"
    >
      <div class="lg:col-span-7 flex flex-col justify-between h-full">
        <div>
          <span
            class="text-[10px] md:text-xs tracking-[0.5em] text-brand uppercase font-bold mb-6 block"
            >Contact</span
          >
          <h2
            class="text-4xl sm:text-5xl md:text-7xl lg:text-[100px] font-display uppercase tracking-tighter leading-[0.85] md:leading-[0.8]"
          >
            Prêt pour la <br />
            <span class="text-brand">perfection ?</span>
          </h2>
        </div>

        {/* Contact Details moved up for desktop parallel view */}
        <div
          class="hidden lg:grid grid-cols-2 gap-12 pt-16 mt-16 border-t border-white/10"
        >
          <div class="space-y-4">
            <span
              class="text-[10px] tracking-[0.4em] text-gray-400 uppercase block"
              >Visitez l'Atelier</span
            >
            <p
              class="text-gray-400 font-sans text-xs tracking-widest leading-relaxed uppercase max-w-[200px]"
            >
              {siteData.brand.contact.address}
            </p>
          </div>
          <div class="space-y-4">
            <span
              class="text-[10px] tracking-[0.4em] text-gray-400 uppercase block"
              >Réseaux Sociaux</span
            >
            <div class="flex gap-8">
              <a
                href={siteData.brand.socials.instagram}
                class="text-gray-400 hover:text-brand transition-all hover:scale-110"
                aria-label="Instagram"
              >
                <InstagramLogo size={28} weight="bold" />
              </a>
              <a
                href={siteData.brand.socials.facebook}
                class="text-gray-400 hover:text-brand transition-all hover:scale-110"
                aria-label="Facebook"
              >
                <FacebookLogo size={28} weight="bold" />
              </a>
            </div>
          </div>
        </div>
      </div>

      {/* Parallel Map Frame */}
      <div
        class="lg:col-span-5 h-[350px] lg:h-[450px] rounded-3xl overflow-hidden border border-white/10 group relative mt-8 lg:mt-0"
      >
        <div
          class="absolute inset-0 bg-brand/5 group-hover:bg-transparent transition-colors duration-700 z-10 pointer-events-none"
        >
        </div>
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2763.5186596486163!2d7.297455822359487!3d46.21958210344238!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x478ede710892095b%3A0xe78aeff1a2c3961b!2sRte%20de%20l'Industrie%201%2C%201964%20Conthey!5e0!3m2!1sfr!2sch!4v1707834512345!5m2!1sfr!2sch"
          width="100%"
          height="100%"
          style="border:0; filter: grayscale(1) invert(0.9) contrast(1.2) brightness(0.8);"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          class="grayscale contrast-125"></iframe>
      </div>
    </div>

    {/* Contact Form & Mobile-only Info Row */}
    <div
      class="grid grid-cols-1 lg:grid-cols-2 gap-16 md:gap-24 mb-24 items-start"
    >
      <div class="flex flex-col gap-6">
        <div class="flex flex-col gap-3">
          <span
            class="text-[9px] md:text-[10px] tracking-[0.4em] text-gray-400 uppercase"
            >Appelez-nous directement</span
          >
          <a
            href={`tel:${siteData.brand.contact.phone[0]}`}
            class="text-3xl xs:text-4xl md:text-6xl lg:text-7xl font-display font-medium tracking-tight hover:text-brand transition-colors break-words"
          >
            {siteData.brand.contact.phone[0]}
          </a>
        </div>

        {/* Mobile Info (Hidden on Desktop as it's parallel to Title) */}
        <div
          class="grid grid-cols-1 sm:grid-cols-2 gap-10 pt-8 border-t border-white/10 lg:hidden"
        >
          <div class="space-y-4">
            <span
              class="text-[9px] tracking-[0.4em] text-gray-400 uppercase block"
              >Visitez l'Atelier</span
            >
            <p
              class="text-gray-400 font-sans text-[10px] tracking-widest leading-relaxed uppercase"
            >
              {siteData.brand.contact.address}
            </p>
          </div>
          <div class="space-y-4">
            <span
              class="text-[9px] tracking-[0.4em] text-gray-400 uppercase block"
              >Réseaux</span
            >
            <div class="flex gap-6">
              <InstagramLogo
                size={24}
                weight="bold"
                className="text-gray-400"
              />
              <FacebookLogo size={24} weight="bold" className="text-gray-400" />
            </div>
          </div>
        </div>
      </div>

      <div
        class="bg-white/[0.02] p-8 md:p-8 lg:p-0 lg:bg-transparent rounded-3xl lg:rounded-none border border-white/5 lg:border-none"
      >
        <form class="space-y-6 md:space-y-8">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 md:gap-8">
            <div class="flex flex-col gap-2">
              <label
                class="text-sm md:text-base tracking-widest text-gray-300 uppercase"
                >Nom</label
              >
              <input
                type="text"
                placeholder="Votre nom"
                class="w-full bg-transparent border-b border-white/20 py-3 md:py-4 focus:border-brand outline-none transition-colors text-lg placeholder:text-white/50 text-white"
              />
            </div>
            <div class="flex flex-col gap-2">
              <label
                class="text-sm md:text-base tracking-widest text-gray-300 uppercase"
                >E-mail</label
              >
              <input
                type="email"
                placeholder="votre@email.com"
                class="w-full bg-transparent border-b border-white/20 py-3 md:py-4 focus:border-brand outline-none transition-colors text-lg placeholder:text-white/50 text-white"
              />
            </div>
          </div>
          <div class="flex flex-col gap-2">
            <label
              class="text-sm md:text-base tracking-widest text-gray-300 uppercase"
              >Message</label
            >
            <textarea
              rows="3"
              placeholder="Comment pouvons-nous vous aider ?"
              class="w-full bg-transparent border-b border-white/20 py-3 md:py-4 focus:border-brand outline-none transition-colors resize-none text-lg placeholder:text-white/50 text-white"
            ></textarea>
          </div>
          <button
            class="group flex items-center justify-between sm:justify-start sm:gap-6 w-full sm:w-auto text-sm tracking-[0.4em] font-black uppercase py-4 border-b-2 border-brand hover:text-brand transition-colors"
          >
            Envoyer votre demande
            <PaperPlaneTilt
              size={18}
              className="group-hover:translate-x-2 transition-transform"
            />
          </button>
        </form>
      </div>
    </div>
  </div>

  {/* Simplified Bottom Bar: No logo, blue background, reduced height */}
  <div class="bg-[#274C70] mt-16 md:mt-24 py-6 md:py-8">
    <div class="max-w-[1440px] mx-auto px-6">
      <div
        class="flex flex-col md:flex-row justify-between w-full items-center gap-6 text-[9px] md:text-[10px] tracking-[0.3em] md:tracking-[0.4em] text-white/50 uppercase font-bold"
      >
        <span class="order-3 md:order-1 text-center md:text-left">
          &copy; {new Date().getFullYear()}
          {siteData.brand.name}
        </span>

        <nav
          class="flex flex-wrap justify-center gap-6 sm:gap-12 order-1 md:order-2"
        >
          <a href="#" class="hover:text-white transition-colors"
            >Confidentialité</a
          >
          <a href="#" class="hover:text-white transition-colors">Conditions</a>
          <a href="#" class="hover:text-white transition-colors">Cookies</a>
        </nav>
      </div>
    </div>
  </div>
</footer>

<style>
  .daleton-logo {
    letter-spacing: -0.05em;
    transform: scaleX(1.15);
  }
</style>
