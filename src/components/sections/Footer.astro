---
import { siteData } from "../../data/siteContent";
import {
  InstagramLogo,
  FacebookLogo,
  PaperPlaneTilt,
} from "@phosphor-icons/react";
---

<footer class="bg-black text-white pt-24 md:pt-32 pb-0" id="contact">
  <div class="max-w-[1440px] mx-auto px-6">
    {/* Header & Map Section */}
    <div
      class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-24 mb-24 items-start"
    >
      <div class="lg:col-span-7 flex flex-col justify-between h-full">
        <div>
          <span
            class="text-[10px] md:text-xs tracking-[0.5em] text-brand uppercase font-black mb-6 block"
            >Contact</span
          >
          <h2
            class="text-4xl sm:text-5xl md:text-7xl lg:text-[100px] font-display uppercase tracking-tighter leading-[0.85] md:leading-[0.8]"
          >
            Prêt pour la <br />
            <span class="text-brand outline-footer-text">perfection ?</span>
          </h2>
        </div>

        <div class="hidden lg:block pt-16 mt-16 border-t border-white/10">
          <p
            class="text-gray-500 font-sans text-xs tracking-[0.3em] uppercase max-w-sm leading-loose"
          >
            Votre carrosserie de confiance en Valais. Excellence certifiée et
            savoir-faire artisanal depuis 2018.
          </p>
        </div>
      </div>

      <div
        class="lg:col-span-5 h-[350px] lg:h-[450px] rounded-[2.5rem] overflow-hidden border border-white/10 group relative mt-8 lg:mt-0 shadow-2xl"
      >
        <div
          class="absolute inset-0 bg-brand/5 group-hover:bg-transparent transition-colors duration-700 z-10 pointer-events-none"
        >
        </div>
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2763.5186596486163!2d7.297455822359487!3d46.21958210344238!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x478ede710892095b%3A0xe78aeff1a2c3961b!2sRte%20de%20l'Industrie%201%2C%201964%20Conthey!5e0!3m2!1sfr!2sch!4v1707834512345!5m2!1sfr!2sch"
          width="100%"
          height="100%"
          style="border:0; filter: grayscale(1) invert(0.9) contrast(1.2) brightness(0.8);"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          class="grayscale contrast-125"></iframe>
      </div>
    </div>

    {/* The User-Requested Info Grid */}
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-16 md:gap-24 mb-24 pt-16 border-t border-white/10"
    >
      {/* Adresse */}
      <div class="space-y-8">
        <span
          class="text-[10px] tracking-[0.5em] text-brand uppercase font-black"
          >Adresse</span
        >
        <div class="space-y-2">
          <p
            class="text-xl md:text-2xl font-display uppercase tracking-tight text-white leading-tight"
          >
            Route de l'industrie 1
          </p>
          <p
            class="text-sm tracking-[0.2em] text-gray-400 uppercase font-medium"
          >
            1964 - Conthey - Valais - Suisse
          </p>
        </div>
      </div>

      {/* Contact */}
      <div class="space-y-8">
        <span
          class="text-[10px] tracking-[0.5em] text-brand uppercase font-black"
          >Contact</span
        >
        <div class="flex flex-col gap-6">
          <div class="flex flex-col gap-2">
            {
              siteData.brand.contact.phone.map((phone) => (
                <a
                  href={`tel:${phone}`}
                  class="text-xl md:text-2xl font-display hover:text-brand transition-colors text-white tracking-tight"
                >
                  {phone}
                </a>
              ))
            }
          </div>
          <a
            href={`mailto:${siteData.brand.contact.email}`}
            class="text-sm tracking-[0.3em] text-gray-400 hover:text-brand transition-colors uppercase font-medium"
          >
            {siteData.brand.contact.email}
          </a>
        </div>
      </div>

      {/* Horaires */}
      <div class="space-y-8">
        <span
          class="text-[10px] tracking-[0.5em] text-brand uppercase font-black"
          >Horaires</span
        >
        <div class="space-y-4">
          {
            siteData.brand.openingHours.map((hour) => (
              <div class="flex justify-between items-end border-b border-white/5 pb-2 group/hour">
                <span class="text-[11px] tracking-[0.3em] text-gray-400 uppercase font-medium group-hover/hour:text-white transition-colors">
                  {hour.day}
                </span>
                <span class="text-[11px] tracking-[0.2em] text-brand font-black uppercase">
                  {hour.time}
                </span>
              </div>
            ))
          }
        </div>
      </div>
    </div>

    {/* Form & Socials */}
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 mb-24 items-end">
      <div class="lg:col-span-8">
        <form class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="flex flex-col gap-4">
            <label
              class="text-[10px] tracking-[0.4em] text-white/30 uppercase font-black"
              >Votre Nom</label
            >
            <input
              type="text"
              class="bg-transparent border-b border-white/10 py-4 focus:border-brand outline-none transition-colors text-lg"
              placeholder="Jean Dupont"
            />
          </div>
          <div class="flex flex-col gap-4">
            <label
              class="text-[10px] tracking-[0.4em] text-white/30 uppercase font-black"
              >E-mail</label
            >
            <input
              type="email"
              class="bg-transparent border-b border-white/10 py-4 focus:border-brand outline-none transition-colors text-lg"
              placeholder="jean@exemple.ch"
            />
          </div>
          <div class="md:col-span-2 flex flex-col gap-4">
            <label
              class="text-[10px] tracking-[0.4em] text-white/30 uppercase font-black"
              >Votre Message</label
            >
            <textarea
              rows="2"
              class="bg-transparent border-b border-white/10 py-4 focus:border-brand outline-none transition-colors text-lg resize-none"
              placeholder="Comment pouvons-nous vous aider ?"></textarea>
          </div>
          <div class="md:col-span-2">
            <button
              class="bg-brand text-black px-12 py-5 text-[10px] tracking-[0.5em] font-black uppercase hover:bg-white transition-colors flex items-center gap-4"
            >
              Envoyer la demande
              <PaperPlaneTilt size={16} weight="bold" />
            </button>
          </div>
        </form>
      </div>

      <div class="lg:col-span-4 flex flex-col lg:items-end gap-8">
        <span
          class="text-[10px] tracking-[0.5em] text-white/30 uppercase font-black"
          >Suivez l'Atelier</span
        >
        <div class="flex gap-8">
          <a
            href={siteData.brand.socials.instagram}
            class="w-16 h-16 rounded-2xl bg-white/5 flex items-center justify-center hover:bg-brand hover:text-black transition-all group"
          >
            <InstagramLogo size={32} weight="bold" />
          </a>
          <a
            href={siteData.brand.socials.facebook}
            class="w-16 h-16 rounded-2xl bg-white/5 flex items-center justify-center hover:bg-brand hover:text-black transition-all group"
          >
            <FacebookLogo size={32} weight="bold" />
          </a>
        </div>
      </div>
    </div>
  </div>

  {/* Bottom Bar */}
  <div class="bg-[#274C70] py-8">
    <div class="max-w-[1440px] mx-auto px-6">
      <div
        class="flex flex-col md:flex-row justify-between items-center gap-6 text-[10px] tracking-[0.4em] text-white/40 uppercase font-black"
      >
        <span
          >&copy; {new Date().getFullYear()}
          {siteData.brand.name} — Tous droits réservés</span
        >
        <nav class="flex gap-12">
          <a href="#" class="hover:text-brand transition-colors"
            >Confidentialité</a
          >
          <a href="#" class="hover:text-brand transition-colors">Conditions</a>
        </nav>
      </div>
    </div>
  </div>
</footer>

<style>
  .outline-footer-text {
    -webkit-text-stroke: 1px #d4a76a;
    color: transparent;
  }
</style>
