---
import { siteData } from "../../data/siteContent";
import {
  InstagramLogo,
  FacebookLogo,
  PaperPlaneTilt,
} from "@phosphor-icons/react";
---

<footer class="bg-black text-white pt-24 md:pt-32 pb-8 md:pb-12" id="contact">
  <div class="max-w-[1440px] mx-auto px-6">
    {/* Contact Header: Optimized for small screens */}
    <div class="flex flex-col mb-16 md:mb-24">
      <span
        class="text-[10px] md:text-xs tracking-[0.5em] text-brand uppercase font-bold mb-4"
        >Contact</span
      >
      <h2
        class="text-4xl xs:text-5xl md:text-8xl lg:text-[120px] font-display uppercase tracking-tighter leading-[0.9] md:leading-none"
      >
        Prêt pour la <br class="hidden xs:block" /> perfection ?
      </h2>
    </div>

    {/* Contact & Form Grid: Responsive stack */}
    <div
      class="grid grid-cols-1 lg:grid-cols-2 gap-16 md:gap-24 mb-24 md:mb-32 items-start lg:items-end"
    >
      {/* Left: Contact Details */}
      <div class="space-y-12 md:space-y-16">
        <div class="flex flex-col gap-3 md:gap-4">
          <span
            class="text-[9px] md:text-[10px] tracking-[0.4em] text-gray-400 uppercase"
            >Appelez-nous directement</span
          >
          <a
            href={`tel:${siteData.brand.contact.phone[0]}`}
            class="text-3xl xs:text-4xl md:text-6xl lg:text-7xl font-display font-medium tracking-tight hover:text-brand transition-colors break-words"
          >
            {siteData.brand.contact.phone[0]}
          </a>
        </div>

        <div
          class="grid grid-cols-1 sm:grid-cols-2 gap-10 md:gap-12 pt-8 border-t border-white/10"
        >
          <div class="space-y-4">
            <span
              class="text-[9px] md:text-[10px] tracking-[0.4em] text-gray-400 uppercase block"
              >Visitez l'Atelier</span
            >
            <p
              class="text-gray-400 font-sans text-[10px] md:text-xs tracking-widest leading-relaxed uppercase max-w-[200px]"
            >
              {siteData.brand.contact.address}
            </p>
          </div>
          <div class="space-y-4">
            <span
              class="text-[9px] md:text-[10px] tracking-[0.4em] text-gray-400 uppercase block"
              >Réseaux Sociaux</span
            >
            <div class="flex gap-6 md:gap-8">
              <a
                href={siteData.brand.socials.instagram}
                class="text-gray-400 hover:text-brand transition-all hover:scale-110"
                aria-label="Instagram"
              >
                <InstagramLogo
                  size={24}
                  weight="bold"
                  className="md:w-7 md:h-7"
                />
              </a>
              <a
                href={siteData.brand.socials.facebook}
                class="text-gray-400 hover:text-brand transition-all hover:scale-110"
                aria-label="Facebook"
              >
                <FacebookLogo
                  size={24}
                  weight="bold"
                  className="md:w-7 md:h-7"
                />
              </a>
            </div>
          </div>
        </div>
      </div>

      {/* Right: Modern Form: Better spacing on mobile */}
      <div
        class="bg-white/[0.02] p-8 md:p-8 lg:p-0 lg:bg-transparent rounded-3xl lg:rounded-none border border-white/5 lg:border-none"
      >
        <form class="space-y-6 md:space-y-8">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 md:gap-8">
            <div class="flex flex-col gap-2">
              <label
                class="text-sm md:text-base tracking-widest text-gray-300 uppercase"
                >Nom</label
              >
              <input
                type="text"
                placeholder="Votre nom"
                class="w-full bg-transparent border-b border-white/20 py-3 md:py-4 focus:border-brand outline-none transition-colors text-lg placeholder:text-white/50 text-white"
              />
            </div>
            <div class="flex flex-col gap-2">
              <label
                class="text-sm md:text-base tracking-widest text-gray-300 uppercase"
                >E-mail</label
              >
              <input
                type="email"
                placeholder="votre@email.com"
                class="w-full bg-transparent border-b border-white/20 py-3 md:py-4 focus:border-brand outline-none transition-colors text-lg placeholder:text-white/50 text-white"
              />
            </div>
          </div>
          <div class="flex flex-col gap-2">
            <label
              class="text-sm md:text-base tracking-widest text-gray-300 uppercase"
              >Message</label
            >
            <textarea
              rows="3"
              placeholder="Comment pouvons-nous vous aider ?"
              class="w-full bg-transparent border-b border-white/20 py-3 md:py-4 focus:border-brand outline-none transition-colors resize-none text-lg placeholder:text-white/50 text-white"
            ></textarea>
          </div>
          <button
            class="group flex items-center justify-between sm:justify-start sm:gap-6 w-full sm:w-auto text-sm tracking-[0.4em] font-black uppercase py-4 border-b-2 border-brand hover:text-brand transition-colors"
          >
            Envoyer votre demande
            <PaperPlaneTilt
              size={18}
              className="group-hover:translate-x-2 transition-transform"
            />
          </button>
        </form>
      </div>
    </div>

    {/* Big Brand Watermark: Responsive positioning */}
    <div
      class="relative pt-16 md:pt-24 mt-16 md:mt-24 border-t border-white/10"
    >
      <div
        class="absolute inset-x-0 -top-12 md:-top-24 flex justify-center opacity-[0.02] md:opacity-[0.03] select-none pointer-events-none overflow-hidden"
      >
        <img
          src="/ELITE-LOGO-WHITE.svg"
          alt="Elite Watermark"
          class="w-[80vw] md:w-[60vw] h-auto grayscale"
        />
      </div>

      <div
        class="flex flex-col md:flex-row justify-between w-full items-center gap-8 md:gap-12 text-[9px] md:text-[10px] tracking-[0.3em] md:tracking-[0.4em] text-gray-600 uppercase font-bold relative z-10"
      >
        <span
          class="order-3 md:order-1 text-center md:text-left opacity-60 md:opacity-100"
          >&copy; {new Date().getFullYear()} {siteData.brand.name}</span
        >

        <nav
          class="flex flex-wrap justify-center gap-6 sm:gap-12 order-1 md:order-2"
        >
          <a href="#" class="hover:text-white transition-colors"
            >Confidentialité</a
          >
          <a href="#" class="hover:text-white transition-colors">Conditions</a>
          <a href="#" class="hover:text-white transition-colors">Cookies</a>
        </nav>
      </div>
    </div>
  </div>
</footer>

<style>
  .daleton-logo {
    letter-spacing: -0.05em;
    transform: scaleX(1.15);
  }
</style>
