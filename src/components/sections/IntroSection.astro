---
import { siteData } from "../../data/siteContent";
---

<section class="bg-black text-white py-24 border-b border-white/10">
  <div class="max-w-[1440px] mx-auto px-6">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-24 items-start">
      {/* Left Column: Huge Indicator & Title */}
      <div>
        <div class="flex items-center gap-4 mb-8">
          <span class="text-xs tracking-[0.4em] text-brand font-bold uppercase"
            >Philosophie</span
          >
          <div class="h-[1px] flex-1 bg-white/10"></div>
        </div>
        <h2
          class="text-5xl md:text-7xl lg:text-[100px] font-display font-medium uppercase tracking-tighter leading-[0.9] mb-12"
        >
          {siteData.introduction.title}
        </h2>
      </div>

      {/* Right Column: Description */}
      <div class="lg:pt-24">
        <div class="flex flex-col gap-16">
          <div>
            <span
              class="text-xs tracking-[0.5em] text-gray-400 uppercase mb-8 block"
              >({siteData.introduction.subtitle})</span
            >
            <p
              class="text-2xl font-sans text-gray-200 leading-tight font-light max-w-2xl"
            >
              {siteData.introduction.text}
            </p>
          </div>

          <div
            class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-16 border-t border-white/10 pt-16"
          >
            {
              siteData.introduction.aboutFeatures.map((item) => (
                <div class="space-y-4 group">
                  <div class="flex items-center gap-4">
                    <div class="w-1.5 h-1.5 rounded-full bg-brand group-hover:scale-125 transition-all" />
                    <h3 class="text-xs tracking-[0.2em] font-bold uppercase text-white">
                      {item.title}
                    </h3>
                  </div>
                  <p class="text-sm text-gray-200 leading-relaxed max-w-sm">
                    {item.text}
                  </p>
                </div>
              ))
            }
          </div>

          <div class="flex flex-wrap gap-12 pt-8 border-t border-white/5">
            <div class="flex flex-col">
              <span class="text-[10px] text-gray-400 uppercase tracking-widest"
                >Fondée en 2018</span
              >
              <span
                class="text-[10px] text-brand uppercase tracking-[0.3em] font-bold"
                >Qualité Premium</span
              >
            </div>
            <div class="flex flex-col">
              <span class="text-[10px] text-gray-400 uppercase tracking-widest"
                >Sikkens Partner</span
              >
              <span
                class="text-[10px] text-brand uppercase tracking-[0.3em] font-bold"
                >Peinture Éco</span
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
