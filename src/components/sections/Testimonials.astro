const googleReviews = [
  {
    name: "Filipe Vaz",
    initial: "F",
    bgColor: "bg-orange-600",
    time: "3 months ago",
    text: "Patron super sympa. Travail de pros",
    rating: 5
  },
  {
    name: "A Aks",
    initial: "A",
    bgColor: "bg-slate-600",
    time: "3 months ago",
    text: "J'ai retrouv√© ma voiture Encore mieux qu'au premier jour üôè",
    rating: 5
  },
  {
    name: "Alpine classic",
    initial: "A",
    bgColor: "bg-blue-800",
    time: "3 months ago",
    text: "Tr√®s pro tr√®s propre et √©quip√© a l'√©coute des souhaits et la finition comme on aime",
    rating: 5
  },
  {
    name: "Theo Jordan",
    initial: "T",
    bgColor: "bg-neutral-700",
    time: "3 months ago",
    text: "Equipe professionnel acueillant et vraiment travail effectu√© sur ma voiture recommande vraiment",
    rating: 5
  }
];
---

<section id="testimonials" class="bg-[#050505] py-24 lg:py-40 text-white border-t border-white/5 relative overflow-hidden">
  <div class="max-w-[1440px] mx-auto px-6">
    
    {/* Google Section Header */}
    <div class="flex flex-col items-center text-center mb-20">
      <span class="text-2xl font-display uppercase tracking-[0.3em] font-medium mb-4">Excellent</span>
      <div class="flex gap-1 mb-4">
        {[...Array(5)].map(() => (
          <Star size={32} weight="fill" className="text-[#F4B400]" />
        ))}
      </div>
      <span class="text-xs tracking-widest text-gray-500 uppercase mb-6">Based on 37 reviews</span>
      
      {/* Google Logo */}
      <div class="flex items-center gap-1 text-2xl font-medium tracking-tight">
        <span class="text-[#4285F4]">G</span>
        <span class="text-[#EA4335]">o</span>
        <span class="text-[#FBBC05]">o</span>
        <span class="text-[#4285F4]">g</span>
        <span class="text-[#34A853]">l</span>
        <span class="text-[#EA4335]">e</span>
      </div>
    </div>

    {/* Reviews Grid / Carousel Container */}
    <div class="relative group">
      
      {/* Navigation Arrows */}
      <button 
        id="scroll-left"
        class="absolute left-0 top-1/2 -translate-y-1/2 -translate-x-4 z-20 w-12 h-12 rounded-full border border-white/10 bg-black/50 backdrop-blur-md flex items-center justify-center text-white/40 hover:text-brand hover:border-brand transition-all hidden lg:flex"
      >
        <CaretLeft size={24} />
      </button>
      <button 
        id="scroll-right"
        class="absolute right-0 top-1/2 -translate-y-1/2 translate-x-4 z-20 w-12 h-12 rounded-full border border-white/10 bg-black/50 backdrop-blur-md flex items-center justify-center text-white/40 hover:text-brand hover:border-brand transition-all hidden lg:flex"
      >
        <CaretRight size={24} />
      </button>

      {/* Cards Scroll Area */}
      <div 
        id="review-scroll-container"
        class="flex gap-6 overflow-x-auto pb-12 snap-x no-scrollbar scroll-mask px-6 md:px-12 lg:px-24 scroll-smooth"
      >
        {googleReviews.map((review) => (
          <div class="flex-none w-[320px] md:w-[400px] snap-center p-[1px] rounded-[32px] bg-gradient-to-b from-white/10 to-transparent mb-4">
            <div class="bg-[#111111] rounded-[31px] p-8 h-full flex flex-col relative overflow-hidden group/card hover:bg-[#161616] transition-colors">
              
              {/* Card Header */}
              <div class="flex justify-between items-start mb-6">
                <div class="flex items-center gap-4">
                  <div class={`w-12 h-12 rounded-full ${review.bgColor} flex items-center justify-center text-xl font-bold`}>
                    {review.initial}
                  </div>
                  <div>
                    <h3 class="font-bold text-sm tracking-wide text-white">{review.name}</h3>
                    <span class="text-[10px] text-gray-400 uppercase tracking-widest">{review.time}</span>
                  </div>
                </div>
                
                {/* Mini Google G */}
                <div class="w-5 h-5 flex items-center justify-center">
                   <svg viewBox="0 0 24 24" class="w-full h-full">
                    <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                    <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                    <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l3.66-2.84z" fill="#FBBC05"/>
                    <path d="M12 5.38c1.62 0 3.06.56 4.21 1.63l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                  </svg>
                </div>
              </div>

              {/* Rating + Checkmark */}
              <div class="flex items-center gap-2 mb-6">
                <div class="flex gap-0.5">
                  {[...Array(review.rating)].map(() => (
                    <Star size={16} weight="fill" className="text-[#F4B400]" />
                  ))}
                </div>
                <CheckCircle size={14} weight="fill" className="text-[#4285F4]" />
              </div>

              {/* Review Text */}
              <p class="text-sm md:text-base text-gray-300 leading-relaxed font-sans mb-8 flex-grow">
                {review.text}
              </p>

              {/* Quotes Decoration */}
              <div class="flex justify-end opacity-20 group-hover/card:opacity-40 transition-opacity">
                <Quotes size={32} weight="fill" className="text-brand" />
              </div>

            </div>
          </div>
        ))}
      </div>
    </div>

  </div>
</section>

<style>
  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }
  .no-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scroll-mask {
    mask-image: linear-gradient(
      to right,
      transparent,
      black 5%,
      black 95%,
      transparent
    );
    -webkit-mask-image: linear-gradient(
      to right,
      transparent,
      black 5%,
      black 95%,
      transparent
    );
  }
</style>

<script>
  function setupTestimonialScroll() {
    const container = document.getElementById('review-scroll-container');
    const leftBtn = document.getElementById('scroll-left');
    const rightBtn = document.getElementById('scroll-right');

    if (!container || !leftBtn || !rightBtn) return;

    const scrollAmount = 424; // Card width (400) + gap (24)

    leftBtn.addEventListener('click', () => {
      container.scrollBy({
        left: -scrollAmount,
        behavior: 'smooth'
      });
    });

    rightBtn.addEventListener('click', () => {
      container.scrollBy({
        left: scrollAmount,
        behavior: 'smooth'
      });
    });
  }

  // Load on initial page load
  setupTestimonialScroll();

  // Re-load if Astro swaps content
  document.addEventListener('astro:after-swap', setupTestimonialScroll);
</script>
